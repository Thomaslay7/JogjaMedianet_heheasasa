<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jogjamedianet.com.jogjamedianet.Home"
    android:background="@drawable/bg2"
    android:weightSum="1"
    >



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view3">
        />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#6e7a8c"
        android:paddingTop="20dp"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="176dp"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:src="@drawable/jogjamedianetlogo"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.52" />

    </LinearLayout>


    <TextView
        android:id="@+id/key_namadepan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NamaDepan"
        android:textSize="15dp"

        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/txtnamalengkap"
        android:layout_toStartOf="@+id/key_namabelakang" />

    <TextView
        android:id="@+id/key_namabelakang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NamaBelakang"
        android:textSize="15dp"

        android:textColor="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/key_namadepan"
        android:layout_toEndOf="@+id/txtjkl" />

    <TextView
        android:id="@+id/key_jabatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jabatan"
        android:textSize="15dp"

        android:textColor="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/key_jeniskelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
android:textColor="@color/colorPrimaryDark"
        android:text="jeniskelamin"
        android:layout_below="@+id/txtjkl"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      REPORT       "
        android:background="@drawable/buttonshape"
        android:id="@+id/btnReport"
        android:textColorHighlight="@color/colorAccent"
        android:layout_alignBaseline="@+id/btnLogOut"
        android:layout_alignBottom="@+id/btnLogOut"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp" />
    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:background="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorBackground"
        app:itemIconTint="#FFFF"
        app:itemTextColor="#FFFF"
        app:menu="@menu/menu" />
    <TextView
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nama Lengkap Pegawai :"
        android:id="@+id/txtnamalengkap"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jabatan :"
        android:id="@+id/txtjbtan"
        android:textSize="15dp"

        android:layout_above="@+id/key_jabatan"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jenis Kelamin :"
        android:id="@+id/txtjkl"
        android:layout_below="@+id/key_jabatan"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  LogOut  "
        android:id="@+id/btnLogOut"
        android:textColor="@color/colorAccent"
        android:background="@drawable/buttonshape"
        android:layout_marginEnd="38dp"
        android:layout_above="@+id/tb_main"
        android:layout_alignEnd="@+id/key_namabelakang" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIK :"
        android:id="@+id/textView3"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/key_jeniskelamin"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtnik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="NIK"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA PEGAWAI"
        android:id="@+id/textView4"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
